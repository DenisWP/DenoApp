<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.farid.denoapp.TelaInicial">

    <ImageView
        android:id="@+id/LogoFarid"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignBottom="@+id/txtCodProduto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_below="@+id/txtDescProduto" />

    <EditText
        android:id="@+id/edtCodBarras"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:ems="10"
        android:hint="@string/edtLeitorBarras"
        android:inputType="textPersonName"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btnVer" />

    <TextView
        android:id="@+id/txtCodProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/txtCodProduto"
        android:inputType="textPersonName"
        android:layout_below="@+id/edtCodBarras"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtDescProduto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textColor="#8B0000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/txtDescProduto"
        android:inputType="textPersonName"
        android:textColorLink="@android:color/holo_red_dark"
        android:textSize="60sp"
        tools:textSize="60sp" />

    <TextView
        android:id="@+id/txtSifrao"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/txtDescProduto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/txtSifrao"
        android:inputType="textPersonName"
        android:textSize="100sp" />

    <TextView
        android:id="@+id/txtValor"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:textColor="#8B0000"
        android:ems="2"
        android:gravity="center"
        android:hint="@string/txtValor"
        android:inputType="textPersonName"
        android:textColorLink="@android:color/holo_red_dark"
        android:textSize="100sp"
        tools:textSize="100sp"
        android:layout_alignTop="@+id/txtSifrao"
        android:layout_alignRight="@+id/btnVer"
        android:layout_alignEnd="@+id/btnVer" />

    <Button
        android:id="@+id/btnVer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp"
        android:layout_alignBottom="@+id/edtCodBarras"
        android:layout_toLeftOf="@+id/btnLimpar"
        android:layout_toStartOf="@+id/btnLimpar" />

    <Button
        android:id="@+id/btnLimpar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limpar"
        android:layout_marginRight="61dp"
        android:layout_marginEnd="61dp"
        android:layout_alignBottom="@+id/edtCodBarras"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
