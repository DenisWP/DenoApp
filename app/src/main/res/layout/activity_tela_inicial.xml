<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.farid.denoapp.TelaInicial">

    <ImageView
        android:id="@+id/LogoFarid"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="33dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txtCodBarras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/LogoFarid"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="36dp"
        android:layout_toEndOf="@+id/LogoFarid"
        android:layout_toRightOf="@+id/LogoFarid"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/txtCodBarras" />

    <EditText
        android:id="@+id/edtCodBarras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/LogoFarid"
        android:layout_alignLeft="@+id/txtCodBarras"
        android:layout_alignStart="@+id/txtCodBarras"
        android:layout_marginBottom="37dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/edtLeitorBarras" />

    <TextView
        android:id="@+id/txtCodProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/LogoFarid"
        android:layout_alignStart="@+id/LogoFarid"
        android:layout_below="@+id/LogoFarid"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="140dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/txtCodProduto" />

    <TextView
        android:id="@+id/txtDescProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtCodProduto"
        android:layout_alignStart="@+id/txtCodProduto"
        android:layout_below="@+id/txtCodProduto"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/txtDescProduto" />

    <TextView
        android:id="@+id/txtSifrao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtDescProduto"
        android:layout_alignStart="@+id/txtDescProduto"
        android:layout_below="@+id/txtDescProduto"
        android:layout_marginTop="43dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/txtSifrao" />

    <TextView
        android:id="@+id/txtValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtSifrao"
        android:layout_alignStart="@+id/txtSifrao"
        android:layout_below="@+id/txtSifrao"
        android:layout_marginTop="87dp"
        android:ems="10"
        android:hint="@string/txtValor"
        android:inputType="textPersonName" />


</RelativeLayout>
