<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.farid.denoapp.TelaInicial">

    <ImageView
        android:id="@+id/LogoFarid"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="33dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txtCodBarras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/LogoFarid"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="36dp"
        android:layout_toEndOf="@+id/LogoFarid"
        android:layout_toRightOf="@+id/LogoFarid"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/txtCodBarras" />

    <EditText
        android:id="@+id/edtCodBarras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/LogoFarid"
        android:layout_alignLeft="@+id/txtCodBarras"
        android:layout_alignStart="@+id/txtCodBarras"
        android:layout_marginBottom="37dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/edtLeitorBarras" />

    <TextView
        android:id="@+id/txtCodProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/txtCodProduto"
        android:inputType="textPersonName"
        android:layout_below="@+id/btnLimpar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/txtDescProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="@string/txtDescProduto"
        android:inputType="textPersonName"
        android:layout_below="@+id/txtCodProduto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtSifrao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtDescProduto"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="@string/txtSifrao"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/txtValor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/txtSifrao"
        android:layout_alignStart="@+id/txtSifrao"
        android:layout_below="@+id/txtSifrao"
        android:layout_marginTop="18dp"
        android:ems="2"
        android:hint="@string/txtValor"
        android:inputType="textPersonName"
        android:textSize="36sp"
        tools:textSize="30sp" />

    <Button
        android:id="@+id/btnVer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtCodBarras"
        android:layout_alignStart="@+id/edtCodBarras"
        android:layout_alignTop="@+id/edtCodBarras"
        android:layout_marginTop="46dp"
        android:text="Ver" />

    <Button
        android:id="@+id/btnLimpar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnVer"
        android:layout_alignStart="@+id/btnVer"
        android:layout_below="@+id/btnVer"
        android:layout_marginTop="15dp"
        android:text="Limpar" />


</RelativeLayout>
